{
  "name": "project-expenses",
  "version": "1.0.0",
  "description": "project expenses",
  "private": true,
  "author": "",
  "license": "ISC",
  "scripts": {
    "pre-deploy-hosting": "cd hosting && yarn build && cd .. && cd functions && yarn build && cd ..",
    "deploy:dev": "yarn use:dev && yarn env:dev && yarn pre-deploy-hosting && firebase deploy && yarn env:local",
    "deploy:stg": "yarn use:stg && yarn env:stg && yarn pre-deploy-hosting && firebase deploy && yarn use:dev && yarn env:local",
    "deploy-dev:ci": "yarn pre-deploy-hosting && firebase deploy --token ${FIREBASE_TOKEN_DEV}",
    "deploy-stg:ci": "yarn pre-deploy-hosting && firebase deploy --token ${FIREBASE_TOKEN_STG}",
    "deploy-hosting": "yarn pre-deploy-hosting && firebase deploy --only hosting",
    "function-fmt": "cd functions && yarn fmt && yarn lint",
    "hosting-fmt": "cd hosting && yarn fmt && yarn lint",
    "project-fmt": "yarn function-fmt && yarn hosting-fmt",
    "copy:env:local": "cp hosting/env.local hosting/.env",
    "copy:runtime:local": "cp functions/runtimeconfig.local.json functions/.runtimeconfig.json",
    "copy:config:local": "cp functions/src/config/config.local.json functions/src/config/config.json",
    "copy:config:dev": "cp functions/src/config/config.dev.json functions/src/config/config.json",
    "copy:config:stg": "cp functions/src/config/config.stg.json functions/src/config/config.json",
    "copy:sa:dev": "cp functions/src/config/service-account.dev.json functions/src/config/service-account.json",
    "copy:sa:stg": "cp functions/src/config/service-account.stg.json functions/src/config/service-account.json",
    "copy:env:dev": "cp hosting/env.dev hosting/.env",
    "copy:env:stg": "cp hosting/env.stg hosting/.env",
    "copy:runtime:dev": "cp functions/runtimeconfig.dev.json functions/.runtimeconfig.json",
    "copy:runtime:stg": "cp functions/runtimeconfig.stg.json functions/.runtimeconfig.json",
    "use:dev": "firebase use mini-project-expenses-dev",
    "use:stg": "firebase use mini-project-expenses-stg",
    "env:local": "yarn copy:sa:dev && yarn copy:env:local && yarn copy:runtime:local && yarn copy:config:local",
    "env:dev": "yarn copy:sa:dev && yarn copy:env:dev && yarn copy:runtime:dev && yarn copy:config:dev",
    "env:stg": "yarn copy:sa:stg && yarn copy:env:stg && yarn copy:runtime:stg && yarn copy:config:stg",
    "use-dev:ci": "yarn env:dev && firebase use mini-project-expenses-dev --token ${FIREBASE_TOKEN_DEV}",
    "use-stg:ci": "yarn env:stg && firebase use mini-project-expenses-stg --token ${FIREBASE_TOKEN_STG}",
    "change-account": "firebase logout && firebase login"
  }
}
